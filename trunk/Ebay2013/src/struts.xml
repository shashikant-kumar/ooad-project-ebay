<action name="makePayment" class="ebay.action.MakePayment">
			<result name="credit" type="tiles">/Credit.tiles</result>
			<result name="debit" type="tiles">/Debit.tiles</result>
			<result name="bank" type="tiles">/Bank.tiles</result>
			</action>
